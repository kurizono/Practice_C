#include <stdio.h>
#include <string.h>

typedef enum {
      本人,子供,親,孫,祖父母,ひ孫,
      Family_count
  } E_Family;
  
typedef struct{
      int family;
} blood;
  
int Change(char *str){
    int input = 0;
    if(strcmp(str,"子供") == 0){
        input = 子供;
    }else if(strcmp(str,"親") == 0){
        input = 親;
    }else if(strcmp(str,"孫") == 0){
        input = 孫;
    }else if(strcmp(str,"祖父母") == 0){
        input = 祖父母;
    }else if(strcmp(str,"ひ孫") == 0){
        input = ひ孫;
    }else{ input = -1; }
    
    return input;
}

//呼び方を入れると、それが本人までいくつかかるかの関数
int FamilyNum(blood relation[], int self, int num){
    
    if(self == -1){
        num = -1;
    }else if(relation[self].family != 本人){
        num = FamilyNum(relation, relation[self].family, num + 1);
    };
    return num;  
}
  
int main(void){
    
  blood relation[Family_count];
  relation[子供].family = 本人;
  relation[親].family = 本人;
  relation[孫].family = 子供;
  relation[祖父母].family = 親;
  relation[ひ孫].family = 孫;
    
　printf("子供,親,孫,祖父母,ひ孫のいずれかから選んでください\n");
    
  char str[100];
  scanf("%s", str);
  int input = Change(str);

  int distance = FamilyNum(relation, input, 1);
  
  printf("親等の数は：%d\n", distance);
  
  return 0;
}
